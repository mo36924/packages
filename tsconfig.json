{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "bundler",
    "paths": {
      "@mo36924/graphql/*": ["packages/graphql/src/*"],
      "@mo36924/graphql-plugin/*": ["packages/graphql-plugin/src/*"],
      "@mo36924/*": ["packages/*/src"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["packages/*/dist"]
}
